<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <a href="/" class="logo">üå∏ Japanese Vocab Quiz</a>
                <ul class="nav-menu">
                    <li><a href="/quiz/list">Quizzes</a></li>
                    <li><a href="/quiz/create" class="btn-create">Create Quiz</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            <h1>Available Quizzes</h1>
            <% if (quizzes.length === 0) { %>
                <div class="empty-state">
                    <p>No quizzes available yet. Create your first quiz!</p>
                    <a href="/quiz/create" class="btn btn-primary">Create Quiz</a>
                </div>
            <% } else { %>
                <div class="quiz-grid">
                    <% quizzes.forEach(quiz => { %>
                        <div class="quiz-card">
                            <h3><%= quiz.title %></h3>
                            <p class="quiz-description"><%= quiz.description || 'No description available' %></p>
                            <div class="quiz-meta">
                                <span class="question-count">üìù <%= quiz.questions?.length || 0 %> questions</span>
                            </div>
                            <a href="/quiz/<%= quiz.id %>" class="btn btn-primary">Start Quiz</a>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 Japanese Vocabulary Quiz. For educational purposes.</p>
    </footer>
</body>
</html>
